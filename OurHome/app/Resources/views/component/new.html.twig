{% extends 'base.html.twig' %}

{% block body %}

    <div class="container-login-form">
        {{ form_start(form, {'method': 'post', 'attr': {'class': 'fos_user_registration_register, form-signin'}}) }}
        {{ form_row(form.title, {'attr': {'class': 'register-input','placeholder': 'Insira seu acesso'|trans, 'label':'Nome de acesso'}}) }}
        {{ form_row(form.description, {'attr': {'class': 'register-input','placeholder': 'Insira seu e-mail'|trans}}) }}
        {{ form_row(form.status) }}
        {{ form_row(form.user) }}
        {{ form_errors(form) }}
        <input type="submit" class="btn btn-lg btn-primary register-input-button" name="_submit"
               value="{{ 'Criar'|trans }}"/>
        <a href="{{ path('component_index') }}">
            <button class="btn btn-lg btn-primary register-input-button" value="{{ 'Voltar'|trans }}">
                Voltar
            </button>
        </a>

        {{ form_end(form) }}
    </div>
{% endblock %}
